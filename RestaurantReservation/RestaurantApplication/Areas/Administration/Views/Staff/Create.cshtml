@model RestaurantApplication.Models.Staff.Create
@{
    ViewData["Title"] = "Create";
}

<div class="row position-relative m-0">
    <div class="row">
        <div class="col-sm-12">
            <h2 class="module-title font-alt align-left">Staff Management</h2>
            <h5 class="module-subtitle align-left mb-10">Create New User</h5>
        </div>
    </div>
</div>
<hr class="divider-w mt-10 mb-20">
<div class="row">
    <div class="col-md-6">
        <form asp-area="Administration" asp-controller="Staff" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter Email"/>             
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" placeholder="Enter Passwaor" />               
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Comfirm Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role"></label>
                <select asp-for="Role" asp-items="Model.Roles" class="form-control">
                </select>             
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
      
            <button type="submit" class="btn btn-circle btn-primary">Create</button>
        </form>
    </div>

</div>