@model RestaurantApplication.Models.SetSittingVM;
@{
    ViewData["Title"] = "Create";
}

<link href="css/styles.css" rel="stylesheet" />
<div class="row position-relative m-0">
    <div class="row">
        <div class="col-sm-12">
            <h2 class="module-title font-alt align-left">Manage Sitting</h2>
            <h5 class="module-subtitle align-left mb-10">Create New Sitting</h5>
        </div>
    </div>
</div>
<hr class="divider-w mt-10 mb-20">

<div class="row">
    <div class="col-md-6 mb-30">
    <form asp-area="Administration" asp-controller="Sitting" asp-action="Create" method="post">
        <div class="form-group">
            <label> Please select sitting type: </label>
            <select asp-for="selectedSittingType" class="form-control" required>
                <option value="">-- Select a sitting type --</option>
                @foreach (var s in Model.SittingTypes)
                {
                    <option value="@s.Name">@s.Name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label>Capacity: </label>
            <input type="number" asp-for="capacity" class="form-control" />
        </div>
        <div class="form-group">
            <label>Start Time: </label>
            <input type="datetime-local"
                   asp-for="startTime"
                   value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")"
                   class="form-control" />
        </div>
        <div class="form-group">
            <label>End Time: </label>
            <input type="datetime-local"
                   asp-for="endTime"
                   value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")"
                   class="form-control" />
        </div>

        <div class="form-group">
            <label>Active:</label>
            <input type="checkbox" asp-for="active" value="true" />
        </div>

        <div class="form-group">
            <label>Numbers Of Repeat: </label>
            <select asp-for="numberOfRepeat" class="form-control">
                <option value="1">Never</option>
                <option value="7">7 Days</option>
                <option value="14">14 Days</option>
                <option value="21">21 Days</option>
                <option value="30">30 Days</option>
                <option value="90">90 Days</option>
            </select>
        </div>
        <button type="submit" class="btn btn-circle btn-primary">Create</button>
    </form>
    </div>
</div>

